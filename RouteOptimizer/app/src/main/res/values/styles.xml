<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/start_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>

    <style name="StartTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="colorPrimary">@color/start_background</item>
        <item name="colorPrimaryDark">@color/start_background</item>
        <item name="colorAccent">@color/start_background</item>
        <item name="android:colorBackground">@color/start_background</item>
        <item name="android:windowBackground">@color/start_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
